<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="180dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_centerVertical="true"
    android:background="@color/color_3">

    <TextView
        android:id="@+id/exit_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_header"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:fontFamily="@font/nunito_extrabold"/>

    <TextView
        android:id="@+id/exit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_message"
        android:layout_below="@id/exit_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/exit_message"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:id="@+id/cancel"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/exit_cancel"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_bold"
            app:cornerRadius="5dp"
            app:backgroundTint="@color/color_5"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:id="@+id/exit"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/exit_game"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_bold"
            app:cornerRadius="5dp"
            app:backgroundTint="@color/color_5"/>


    </LinearLayout>


</RelativeLayout>